<div class="d-flex m-3 flex-wrap gap-3">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag(bookmark.movie.poster_url, class: "img-fluid rounded-start") %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="d-flex gap-2 align-items-baseline justify-content-between">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <div class="d-flex gap-1">
                <i class="fa-solid fa-star" style="color: #ffe11f;"></i>
                <h6 class="card-text"><%= bookmark.movie.rating %></h6>
              </div>
            </div>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <h6 class="card-text-comment"><%= bookmark.comment %></h6>
            <%= link_to 'Delete', bookmark_path(bookmark.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-delete text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
