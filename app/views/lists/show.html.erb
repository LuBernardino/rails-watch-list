<div>
  <h1 class="m-5 p-2 d-flex justify-content-between">
    <%= @list.name %>
    <%= link_to 'Back to the lists', lists_path, class:"btn btn-warning m-2 text-decoration-none col-4"%>
  </h1>

  <% @list.bookmarks.each do |bookmark| %>
    <%= image_tag(bookmark.movie.poster_url) %>
    <%= bookmark.movie.title %>
    <%= bookmark.movie.overview %>
  <% end %>

  <%= link_to 'Create a new bookmark', new_list_bookmark_path(@list), class:"btn btn-warning m-2 text-decoration-none col-4"%>
</div>


