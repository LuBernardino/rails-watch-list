<h1>INDEX LISTS</h1>

<ul class="list-group list-group-flush">
  <% @lists.each do |list| %>
    <li class="m-2 col-6 p-2 list-group-item"><%= link_to list.name, list_path(list), class:"text-decoration-none" %></li>
  <% end %>
</ul>

<div class="form-group m-5 my-5">
  <%= link_to 'Create a new list', new_list_path, class:"btn btn-warning m-2 text-decoration-none col-4"%>
</div>
